@model Flew2Bits.Media.AWS.ViewModels.OptionsViewModel
<h1>@RenderTitleSegments(T["AWS S3 storage options"])</h1>

<p class="alert alert-secondary">
    @T["AWS S3 storage is configured with appsettings.json."]
</p>

<div class="form-group row">
    <label asp-for="EndPoint" class="col-sm-2 col-form-label">@T["Endpoint"]</label>
    <div class="col-sm-10">
        <code><input type="text" class="form-control-plaintext" value="@Model.EndPoint" /></code>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Secret" class="col-sm-2 col-form-label">@T["Secret"]</label>
    <div class="col-sm-10">
        <code>
            @if (!String.IsNullOrEmpty(Model.Secret))
            {
                @T["Configured"]
            }
            else
            {
                @T["Not Configured"]
            }
        </code>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Key" class="col-sm-2 col-form-label">@T["Key"]</label>
    <div class="col-sm-10">
        <code>
            @if (!String.IsNullOrEmpty(Model.Key))
            {
                @T["Configured"]
            }
            else
            {
                @T["Not Configured"]
            }
        </code>
    </div>
</div>

<div class="form-group row">
    <label asp-for="BucketName" class="col-sm-2 col-form-label">@T["Bucket Name"]</label>
    <div class="col-sm-10">
        <code><input type="text" class="form-control-plaintext" value="@Model.BucketName" /></code>
    </div>
</div>

<div class="form-group row">
    <label asp-for="BasePath" class="col-sm-2 col-form-label">@T["Base Path"]</label>
    <div class="col-sm-10">
        <code><input type="text" class="form-control-plaintext" value="@Model.BasePath" /></code>
    </div>
</div>

